[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rideshare Calculator"

[[workflows.workflow]]
name = "Rideshare Calculator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd rideshare-calculator && npm install && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
